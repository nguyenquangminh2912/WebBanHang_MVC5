
@using WebsiteBanHang.Models;
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "LoadSanPhamAjax";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}


<div class="container">
    <div class="content-top">

        <div class="grid-in">
            @foreach (var item in Model)
            {
                <div class="col-md-4 grid-top">
                    <a href="single.html" class="b-link-stripe b-animate-go  thickbox">
                        <img class="img-responsive" src=@Url.Content("~/Content/HinhAnhSP/"+item.HinhAnh) alt="">
                        <div class="b-wrapper">
                            <h3 class="b-animate b-from-left    b-delay03 ">
                                <span>Dien dai ngan gon</span>
                            </h3>
                        </div>
                    </a>
                    <p><a href="single.html">@item.TenSP</a></p>
                </div>
            }
        </div>
    </div>
</div>




